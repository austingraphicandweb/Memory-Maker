<nav class="navbar" role="navigation" aria-label="main navigation" style="background-color:#00d1b2;">

    <div class="navbar-brand">
      <a class="navbar-item" href="/memories">
        <h4>Memories Logo</h4>
      </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item" href="/memories">
          View Memories
        </a>
      </div>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <a id="logoutButton" class="button is-primary">
            Log out
          </a>
        </div>
      </div>
    </div>

</nav>
<div class="container" style="width: 550px;">
  <form id="newMemoryForm">
    <div class="column">

      <label for="date"> Date:</label>
      <input type="date" id="date" name="date" value="{{date}}">
    </div>
    <div class="column">

      <label for="title">Memory Title:</label>
      <input placeholder="title" type="text" id="title" name="title" value="{{title}}">
    </div>
    <div class="column">

      <label for="location">Where you were?</label>
      <input placeholder="location" type="text" id="location" name="location" value="{{location}}">
    </div>
    <div class="column">

      <label for="category">Category</label>
      <input placeholder="category" type="text" id="category" name="category" value="{{category}}">
    </div>

    <div class="column">

      <label for="description">Describe your memories here:</label>
      <textarea type="text" id="description" name="description"> {{description}}</textarea>

      <div class="column">
        <label for="file-uploader">Upload images</label>
        <input type="file" id="file-uploader" class="cloudinary-button" multiple />
      </div>

      <div id="rating" class="stars">
        <label for="ratings">Rate your memories:</label>
        <input class="star star-5" id="star-5" value="5" type="radio" name="star" />
        <label class="star star-5" for="star-5"></label>
        <input class="star star-4" id="star-4" value="4" type="radio" name="star" />
        <label class="star star-4" for="star-4"></label>
        <input class="star star-3" id="star-3" value="3" type="radio" name="star" />
        <label class="star star-3" for="star-3"></label>
        <input class="star star-2" id="star-2" value="2" type="radio" name="star" />
        <label class="star star-2" for="star-2"></label>
        <input class="star star-1" id="star-1" value="1" type="radio" name="star" />
        <label class="star star-1" for="star-1"></label>

      </div>

      <div class="column">
        <div class=" buttons">
          <a id="saveNewMemories" data-id="{{this.id}}" class=" btn button is-primary">
            Save New Memories
          </a>
        </div>
      </div>
  </form>

</div>

<style>
  .navbar {
    background-color: rgb(42, 42, 235);

  }

  .navbar-item {
    color: white;
  }

  input,
  label {
    display: block;
  }

  div.stars {
    width: 270px;
    display: inline-block;
  }

  input.star {
    display: none;
  }

  label.star {
    float: right;
    padding: 10px;
    font-size: 36px;
    color: #444;
    transition: all .2s;
  }

  input.star:checked~label.star:before {
    content: '\f005';
    color: #FD4;
    transition: all .25s;
  }

  input.star-5:checked~label.star:before {
    color: #FE7;
    text-shadow: 0 0 20px #952;
  }

  input.star-1:checked~label.star:before {
    color: #F62;
  }

  label.star:hover {
    transform: rotate(-15deg) scale(1.3);
  }

  label.star:before {
    content: '\f006';
    font-family: FontAwesome;
  }

  textarea {
    width: 500px;
    height: 200px;
    margin: 10px;
    border-radius: 10px;

  }

  input {
    width: 300px;
    height: 40px;
    border-radius: 10px;

  }

  .btn {
    border-radius: 10px;

  }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
